package com.psl.client;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

public class UserInterface {
	public static void main(String[] args)  {
		 Car car=new Car();
		 car.setMake("Audi");
		 car.setModel("A-Tron");
		 car.setColor("Black");
		 car.setEngine(new Engine(125, 1000, FuelType.DIESEL));
		 
		 
	try(	 ObjectOutputStream oos=new ObjectOutputStream(new FileOutputStream(new File("car.ser")))){
		
		oos.writeObject(car);
		
	}catch (Exception e) {
		e.printStackTrace();
	}
	
	
	
	
	try(ObjectInputStream oi=new ObjectInputStream(new FileInputStream(new File("car.ser")))){
		Car c=(Car)oi.readObject();
		System.out.println(c.getMake());
		System.out.println(c.getModel());
		System.out.println(c.getColor());
		System.out.println(c.getEngine());
		
	}catch (Exception e) {
		e.printStackTrace();
	}
	}
 
	
	
	
  
  
}
