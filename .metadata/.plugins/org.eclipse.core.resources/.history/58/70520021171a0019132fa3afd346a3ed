package com.assign.nugget_2;

public class ProductSearch {
      public static String[] initProductNames(){
    	  
    	  String[] str={"cloth","mobile","utensil","laptop","furniture"};
    	  
    	  return str;
      }
      
      public static boolean isPresent(String[] productNames, String keyword)
      {
    	  
    	  for(String i:productNames){
    		  if(i.equalsIgnoreCase(keyword))
    			  return true;
    	  }
    	return false;  
      }
      
      public static void main(String[] args) {
		
    	  ProductSearch ps=new ProductSearch();
   String[] s= 	  ps.initProductNames();
	boolean flag =ps.isPresent(s, "cloths");
	
	System.out.println(flag);
      }
      
      
}
